@{
    ViewData["Title"] = "Book page";
}
@model Book


<h1>AddBook</h1>


<form asp-controller="Admin" asp-action="Add" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger">
        </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input  asp-for="Title" class="form-control" placeholder="Title for Book"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" placeholder="Author"/>
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>    

    <div class="form-group">
        <label asp-for="CreatedAt"></label>
        <input asp-for="CreatedAt" class="form-control" placeholder="Date of create"/>  
        <span asp-validation-for="CreatedAt" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="formFile" class="form-label">Default file input example</label>
        <input class="form-control" name="Image" type="file" id="formFile">
    </div>
   
    <div>
        <label asp-for="CategoryId"></label>
        <select asp-items="ViewBag.categories" asp-for="CategoryId" class="form-select" aria-label="Default select example">            
           
        </select>
    </div>

     <div class="form-group">
        <label asp-for="BookTags"></label>
    <select name="tags" asp-items="ViewBag.tags" multiple class="form-select chosen-select" aria-label="Default select example">
    </select>
    </div>

     <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description" rows="5"></textarea>
         <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button class="btn btn-outline-primary w-25 mt-3"> Add</button>
</form>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />


     <script src="https://cdn.tiny.cloud/1/g9zqwp7tm78tvvxftg4se9v6vhuujkn4dh5xzh6kfr7kxcg6/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
         $(".chosen-select").chosen({no_results_text: "Oops, nothing found!"}); 

        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
        });
    </script>
}